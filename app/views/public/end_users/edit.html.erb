<% if @end_user.errors.any? %>
  <%= @end_user.errors.count %>件のエラーが発生しました
  <ul>
    <% @end_user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="conteiner">
  <div class="row mb-3">
    <h3 class="m-3"><%= @end_user.name %>のページ</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-11">
    <h2>プロフィール編集</h2>
      <%= form_with model: @end_user do |f| %>
      <div class="form_label">
        <label for="inputName">名前</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form_label">
        <label for="inputIntroduction">プロフィール編集</label>
        <%= f.text_area :introduction, id:"inputIntroduction", placeholder:"プロフィール", class:"form-control",style:"width:100%", rows:"8"%>
      </div>
        <%= f.submit "変更を保存" %>
      <% end %>
    </div>
  </div>
</div>