<div class="conteiner">
  <div class="row mt-5 mb-3">
    <h3 class="m-3"><%= @end_user.name %>のページ</h3>
  </div>
  <div class="row justify-content-center">
    <!-- ユーザーの詳細 -->
    <div class="col-8">
      <h3><%= @end_user.name %></h3>
      <% if @end_user.name == "guestuser" %>
      <% elsif @end_user == current_end_user %>
        <%= link_to 'いいね一覧', favorites_index_path %>
        <p><%= link_to "プロフィール編集", edit_end_user_path %></p>
      <% end %>
    </div>
  </div>

  <!-- ユーザーの投稿一覧 -->
  <div class="row justify-content-center">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>記事内容</th>
            <th></th>
          </tr>
        </thead>
        <% @articles.each do |article| %>
        <tbody>
          <tr>
            <td><%= link_to article.title, article_path(article.id) %></td>
            <td><%= article.body %></td>
            <td>
              <% if @end_user.name != "guestuser" %>
              <div id = "like_<%= article.id %>">
                <%= render partial: "public/favorites/favorite", locals: { article: article } %>
              </div>
              <% end %>
              <%= link_to "#{article.article_comments.count} コメント", article_path(article.id) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>